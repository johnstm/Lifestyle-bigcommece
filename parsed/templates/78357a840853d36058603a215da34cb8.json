{
  "components/blog/home-page-post": "<div class=\"home-blog-item p-l-15 p-r-15 width-33\">\r\n  <div class=\"home-blog-item-inner\">\r\n    {{#if thumbnail}}\r\n      <div class=\"home-blog-img banner-hover\">\r\n          {{#if thumbnail}}\r\n            <a href=\"{{url}}\">\r\n              <span>\r\n                <img class=\"lazyload\" data-sizes=\"auto\" src=\"{{cdn 'img/loading.svg'}}\" data-src=\"{{getImage thumbnail 'gallery'}}&imbypass=on\" alt=\"{{thumbnail.alt}}\">\r\n              </span>\r\n            </a>\r\n            {{else}}\r\n            <a href=\"{{url}}\">\r\n              <img src=\"{{cdn ../../theme_settings.default_image_blog}}\" alt=\"No Image\" title=\"No Image\">\r\n            </a>\r\n          {{/if}}\r\n      </div>\r\n      {{/if}}\r\n      <div class=\"home-blog-detail\">\r\n        <div class=\"home-blog-detail-inner\">\r\n          <h4>\r\n            <a href=\"{{url}}\" class=\"home-blog-title\">{{title}}</a>\r\n          </h4>\r\n          <p>\r\n              {{#if body}}\r\n                  {{{body}}}\r\n              {{else}}\r\n                  {{summary}}\r\n              {{/if}}\r\n          </p>\r\n          <div class=\"blog-date display-flex justify-content-start align-item-center\">\r\n            {{#if author}}\r\n              <div class=\"author\">\r\n                  <svg><use xlink:href=\"#icon-author\"></use></svg>\r\n                  <span>{{lang 'blog.posted_by' name=author}}</span>\r\n              </div>\r\n            {{/if}}\r\n            <div class=\"date\">\r\n              <svg><use xlink:href=\"#icon-calender\"></use></svg>\r\n              <span>{{date_published}}</span>\r\n            </div>\r\n          </div>\r\n        </div>\r\n      </div>\r\n  </div>\r\n    </div>\r\n"
}
